<% include ../partials/header %>

<div class="container">

    <h1 class="text-center">Edit <%= campground.name %></h1>
    <div class="w-50 mx-auto my-4">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" placeholder="name"
                    value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[img]" placeholder="image url"
                    value="<%= campground.img %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[description]" placeholder="description"
                    value="<%= campground.description %>">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>


</div>

<% include ../partials/footer %>