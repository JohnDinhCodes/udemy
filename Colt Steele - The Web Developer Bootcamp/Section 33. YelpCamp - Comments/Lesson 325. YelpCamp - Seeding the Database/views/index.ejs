<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 class="display-2">Welcome to YelpCamp!</h1>
            <p class="lead">View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>

    </header>

    <div class="row">
        <% for (let campground of campgrounds) { %>
        <div class="col-md-3 col-sm-6 text-center d-flex">
            <div class="card mb-5">
                <img class="card-img-top" src="<%=campground.img%>" style="width: 100%; height: 10vw; object-fit:cover;">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </div>
            </div>

        </div>
        <% } %>
    </div>
</div>


<% include partials/footer %>