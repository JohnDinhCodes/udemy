<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <li class="list-group-item active">Info 1</li>
            <li class="list-group-item">Info 2</li>
            <li class="list-group-item">Info 3</li>
            <li class="list-group-item">Info 4</li>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="card-img-top" src="<%=campground.img%>" alt="">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h4 class="card-title"><a href="#"><%= campground.name %></a></h4>
                        <h4 class="card-title">$9.00/night</h4>
                    </div>
                    
                    <p class="card-text"><%=campground.description%></p>
                </div>
            </div>
            <div class="card bg-light card-body mt-4">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% for (comment of campground.comments) { %>
                <div class="row">
                    <div class="col-md-12 mt-3">
                        <div class="d-flex justify-content-between">
                            <strong><%= comment.author %></strong>
                            <span>10 days ago</span>
                        </div>
                        <p><%= comment.text %></p>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%include ../partials/footer %>

    